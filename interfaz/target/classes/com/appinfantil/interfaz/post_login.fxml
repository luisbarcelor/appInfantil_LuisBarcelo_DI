<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER_LEFT" stylesheets="@stylesheets/postLogin.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.appinfantil.interfaz.controllers.PostLoginController">
   <AnchorPane>
      <children>
         <Label text="Select a game:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
         <Button fx:id="logout" styleClass="button" onAction="#logout" alignment="CENTER" mnemonicParsing="false" textAlignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="694.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <graphic>
               <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@img/logout.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
      </children>
   </AnchorPane>
   <HBox spacing="55.0">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button styleClass="button" fx:id="colorz" minWidth="200.0" mnemonicParsing="false" onAction="#launchColorz" prefHeight="40.0" prefWidth="300.0" text="Colorz" />
                  <Button styleClass="button" fx:id="snake" minWidth="200.0" mnemonicParsing="false" onAction="#launchSnake" prefHeight="40.0" prefWidth="300.0" text="Snake" />
                  <Button styleClass="button" minWidth="200.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Game 3" />
                  <Button styleClass="button" minWidth="200.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Game 4" />
                  <Button styleClass="button" minWidth="200.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Game 5" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         <AnchorPane fx:id="bigPic" prefHeight="200.0" prefWidth="200.0">
            <children>
                  <ImageView fitHeight="256.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <Image url="@img/gameon.png" />
                  </ImageView>
            </children>
         </AnchorPane>
         </children>
      <padding>
         <Insets top="30.0" />
      </padding>
      </HBox>
</VBox>
